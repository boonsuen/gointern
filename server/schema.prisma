generator db {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
  interface            = "sync"
}

model Student {
  studentId       String      @id
  fullName        String
  email           String      @unique
  icNumber        String      @unique
  createdAt       DateTime    @default(now())
  supervisor      Supervisor? @relation(fields: [supervisorEmail], references: [email])
  supervisorEmail String?
  internship      Internship?
}

model Supervisor {
  email      String    @id
  fullName   String
  password   String
  isApproved Boolean   @default(false)
  createdAt  DateTime  @default(now())
  students   Student[]
}

model Company {
  email       String       @id
  companyName String
  password    String
  isApproved  Boolean      @default(false)
  createdAt   DateTime     @default(now())
  internships Internship[]
  jobs        Job[]
}

model Admin {
  email    String @unique
  password String
}

model Internship {
  id                 String   @id @default(uuid())
  startDate          DateTime @db.Date
  endDate            DateTime @db.Date
  status             String   @default("SUBMITTED")
  allowance          Float
  comSupervisorName  String
  comSupervisorEmail String
  createdAt          DateTime @default(now())
  student            Student  @relation(fields: [studentId], references: [studentId])
  studentId          String   @unique
  company            Company  @relation(fields: [companyId], references: [email])
  companyId          String
}

model Job {
  jobId        String   @id
  title        String  
  description  String
  location     String
  salary       Float
  postedAt     DateTime @default(now())
  company      Company  @relation(fields: [comName], references: [email])
  comName      String
}
