generator db {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
  interface            = "sync"
}

model Student {
  studentId String   @id
  fullName  String
  email     String   @unique
  icNumber  String   @unique
  createdAt DateTime @default(now())
}

model Supervisor {
  email      String   @id
  fullName   String
  password   String
  isApproved Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Company {
  email       String   @id
  companyName String
  password    String
  isApproved  Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Admin {
  email    String @unique
  password String
}
